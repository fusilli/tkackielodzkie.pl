{
  "name": "tkackielodzkie",
  "version": "1.0.0",
  "description": "tkackielodzkie.pl",
  "main": "assets/main.js",
  "scripts": {
    "clean": "rimraf _site .cache",
    "build": "run-s clean build:parcel build:eleventy",
    "start": "run-p dev:parcel dev:eleventy",
    "dev:eleventy": "NODE_ENV=development npx eleventy --serve",
    "dev:parcel": "NODE_ENV=development parcel watch ./assets/main.js --out-dir _site",
    "build:parcel": "NODE_ENV=production parcel build ./assets/main.js --out-dir _site --experimental-scope-hoisting --no-cache",
    "build:eleventy": "NODE_ENV=production npx eleventy"
  },
  "author": "fusil.li",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.5.1",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "markdown-it-anchor": "^5.2.3",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "rimraf": "^2.6.3",
    "tailwindcss": "^1.0.2"
  }
}
